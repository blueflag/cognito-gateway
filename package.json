{
  "name": "cognito-gateway",
  "version": "0.4.3",
  "description": "A gateway lambda for dealing with cognito apis",
  "main": "lib/index.js",
  "license": "UNLICENSED",
  "author": "Allan Hortle",
  "scripts": {
    "build": "rm -rf lib && NODE_ENV=production babel src --out-dir lib",
    "check-coverage": "nyc check-coverage --branches 100  --functions 100 --lines 100",
    "docs": "jsdoc -c jsdoc-config.json",
    "flow": "flow check",
    "lint": "eslint src --ext js,jsx",
    "lint-fix": "eslint src --ext js,jsx --fix",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow",
    "prepublish": "yarn build"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-blueflag": "^0.6.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.12.2",
    "eslint-config-blueflag": "^0.4.0",
    "flow-bin": "^0.51.0",
    "jsdoc-babel": "^0.3.0",
    "nyc": "^10.0.0"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^1.19.0",
    "aws-sdk": "^2.7.21",
    "dotenv": "^2.0.0",
    "gromit": "^0.0.10",
    "jsonwebtoken": "^7.2.1"
  },
  "ava": {
    "require": [
      "./pretest",
      "babel-register"
    ],
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
